    <script>
      document.addEventListener('DOMContentLoaded', function() {
        // This function runs when the document is fully loaded
    
        setTimeout(function() {
          // This function runs after a delay of 3000 milliseconds (3 seconds)
    
          var errorMessage = document.getElementById('errorMessage');
          if (errorMessage) {
            // Check if the element with the ID 'errorMessage' exists
            errorMessage.style.transition = 'opacity 0.5s'; // Add a transition effect
            errorMessage.style.opacity = '0'; // Set opacity to 0 for fade-out effect
    
            // After the fade-out transition, remove the element from the DOM
            setTimeout(function() {
              errorMessage.parentNode.removeChild(errorMessage);
            }, 500); // 500 milliseconds corresponds to the transition duration
          }
        }, 3000);
      });
    </script> 
    

 
