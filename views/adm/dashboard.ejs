<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel</title>
    <!-- Add Bootstrap CSS via CDN -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
</head>
<body>
    <div class="container">
        <h1>Welcome to the Admin Panel</h1>
        
       <!-- Search form -->
<form action="/admin/search" method="GET" class="input-group mb-3">
    <input type="text" class="form-control" placeholder="Search users" aria-label="Search users" aria-describedby="basic-addon2" name="query">
    <div class="input-group-append">
        <button class="btn btn-outline-secondary" type="submit"><i class="bi bi-search"></i> Search</button>
    </div>
</form>

        
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Username</th>
                    <th scope="col">Email</th>
                    <th scope="col">Mobile No.</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                <% users.forEach(user => { %>
                <tr>
                    <td><%= user.name %></td>
                    <td><%= user.email %></td>
                    <td><%=user.number%></td>
                    <td>
                        <a href="/editUser/<%= user._id %>" class="btn btn-sm btn-warning"><i class="bi bi-pencil"></i> Edit</a>
                        <a href="/user/adm/delete/<%= user._id %>" class="btn btn-sm btn-danger"><i class="bi bi-trash"></i> Delete</a>
                        
                    </td>
                </tr>
                <% }); %>
            </tbody>
        </table>
        
        <div class="btn-group" role="group" aria-label="Basic example">
            <button type="button" onclick="window.location.href='/admin/add'" class="btn btn-success">
                <i class="bi bi-person-plus"></i> Add User
            </button>
            
        </div>
        <form action="/logout" method="post">
            <button type="submit" class="btn btn-warning">Logout</button>
          </form>
          
    </div>
    

    <!-- Scripts at the end of the body for faster loading -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
</body>
</html>